{
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "target": "es5",
        "paths": {
            "@classes/*": ["lib/classes/*"],
            "@interfaces/*": ["lib/interfaces/*"],
            "@utility/*": ["lib/utility/*"],
            "@errors/*": ["lib/errors/*"],
            "@config/*": ["config/*"]
        },
        "outDir": "./build"
    },
    "exclude": [ "node_modules" ]
}